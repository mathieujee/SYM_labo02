<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompressedTransmissionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/CompressedTransmissionRequest"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/CompressedTransmissionSentData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/CompressedTransmissionResponse"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/CompressedTransmissionReceivedData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableLayout>
    </ScrollView>

</RelativeLayout>