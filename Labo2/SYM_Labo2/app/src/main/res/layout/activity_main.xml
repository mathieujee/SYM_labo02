<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/asynchronousTransmissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/asynchronousTransmission"
        android:layout_below="@+id/topText"/>

    <Button
        android:id="@+id/delayedTransmissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delayedTransmission"
        android:layout_below="@+id/asynchronousTransmissionButton"/>

    <Button
        android:id="@+id/JSONTransmissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/JSONTransmission"
        android:layout_below="@+id/delayedTransmissionButton"/>

    <Button
        android:id="@+id/XMLTransmissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/XMLTransmission"
        android:layout_below="@+id/JSONTransmissionButton"/>

    <Button
        android:id="@+id/compressedTransmissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/compressedTransmission"
        android:layout_below="@+id/XMLTransmissionButton"/>



</RelativeLayout>